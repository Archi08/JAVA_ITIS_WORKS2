<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="itis.models.Book" table="books" catalog="public">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>

        <property name="name" column="name"/>
        <property name="author" column="author"/>
        <property name="type" column="type"/>
        <property name="genre" column="genre"/>
        <property name="publishingHouse" column="publishingHouse"/>
        <property name="yearOfIssue" column="yearOfIssue"/>
        <property name="numberOfPages" column="numberOfPages"/>
        <property name="language" column="language"/>
        <property name="description" column="description"/>



    </class>
</hibernate-mapping>